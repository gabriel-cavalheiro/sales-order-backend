{
  "compilerOptions": {
    "target": "es2024",
    "module": "node16",
    "moduleResolution": "node16",
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./",
    "types": [
      "@cap-js/cds-types",
      "node"
    ],
    "paths": {
      "@models/*": [
        "./@cds-models/*/index.ts"
      ]
    }
  },
  "include": [
    "srv"
  ],
  "exclude": [
    "node_modules"
  ]
}